<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="LiteDB.StudioNew.Views.QueryView"
             xmlns:AvaloniaEdit="clr-namespace:AvaloniaEdit;assembly=AvaloniaEdit">
    
    <Grid RowDefinitions="*, 4, *">
        <AvaloniaEdit:TextEditor Grid.Row="0" Text="Hello AvaloniaEdit!" Name="TextEditor"
                                 ShowLineNumbers="True"
                                 FontFamily="Cascadia Code,Consolas,Menlo,Monospace"
                                 VerticalAlignment="Stretch"
                                 HorizontalAlignment="Stretch"/>
        
        <GridSplitter Grid.Row="1" ResizeDirection="Rows"/>
        
        
        <DockPanel Grid.Row="2">
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Height="25" Margin="3" Spacing="2">
                <Button Height="24" Width="24" x:Name="ExecuteButton" />
                <Button Height="24" Width="24" x:Name="EditButton" />
                <Button Height="24" Width="24" x:Name="RemoveButton" />
            </StackPanel>
        
            <TextBlock Name="TextResult"/>
            
        </DockPanel>

        
    </Grid>
    
 
</UserControl>
